{
    "manifest_version": 3,
    "name": "UnVexProxy",
    "description": "Proxy manager (HTTP & SOCKS5) с профилями и проверкой работоспособности. Chromium (Chrome/Edge/Yandex).",
    "version": "1.0.0",
    "permissions": [
      "proxy",
      "storage",
      "tabs",
      "activeTab",
      "webRequest",
      "webRequestAuthProvider"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "UnVexProxy"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  